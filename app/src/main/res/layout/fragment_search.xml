<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.others.SearchFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:background="@drawable/blue_search_backdrop"
            android:orientation="horizontal">

            <SearchView
                android:id="@+id/txtSearchLandmark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_text_search"
                android:queryHint="Search"
                android:ems="10"
                android:fontFamily="@font/poppins_regular"
                android:hint="Enter landmark here"
                android:inputType="textPersonName"
                android:paddingStart="13dp"
                android:paddingTop="2dp"
                android:textColor="@color/custom14"
                android:textSize="15sp"
                tools:ignore="TouchTargetSizeCheck"
                android:iconifiedByDefault="false"
                android:queryBackground="@null"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/white_search_backdrop"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Suggestions"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="11dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/poppins_regular"
                android:gravity="start|center_vertical"
                android:letterSpacing="0.03"
                android:paddingLeft="40dp"
                android:text="Table Mountain"
                android:textAllCaps="false"
                android:textColor="@color/custom15"
                android:textSize="16sp"
                tools:ignore="TouchTargetSizeCheck" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="6dp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/poppins_regular"
                android:gravity="start|center_vertical"
                android:letterSpacing="0.03"
                android:paddingLeft="40dp"
                android:text="Robben Island"
                android:textAllCaps="false"
                android:textColor="@color/custom15"
                android:textSize="16sp"
                tools:ignore="TouchTargetSizeCheck" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="6dp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/poppins_regular"
                android:gravity="start|center_vertical"
                android:letterSpacing="0.03"
                android:paddingLeft="40dp"
                android:text="@string/waterfront"
                android:textAllCaps="false"
                android:textColor="@color/custom15"
                android:textSize="16sp"
                tools:ignore="HardcodedText,TouchTargetSizeCheck" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="6dp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/poppins_regular"
                android:gravity="start|center_vertical"
                android:letterSpacing="0.03"
                android:paddingLeft="40dp"
                android:text="Lion's Head"
                android:textAllCaps="false"
                android:textColor="@color/custom15"
                android:textSize="16sp"
                tools:ignore="TouchTargetSizeCheck" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="6dp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/poppins_regular"
                android:gravity="start|center_vertical"
                android:letterSpacing="0.03"
                android:paddingLeft="40dp"
                android:text="Signal Hill"
                android:textAllCaps="false"
                android:textColor="@color/custom15"
                android:textSize="16sp"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/goback"
                android:layout_width="match_parent"
                android:layout_height="380dp">

            </ImageView>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>