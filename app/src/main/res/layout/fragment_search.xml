<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".SearchFragment">

    <LinearLayout
        android:layout_width="347dp"
        android:layout_height="339dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@drawable/blue_search_backdrop"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/txtSearchLandmark"
                android:layout_width="264dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/background_text_search"
                android:ems="10"
                android:fontFamily="@font/poppins_regular"
                android:hint="Enter landmark here"
                android:inputType="textPersonName"
                android:paddingStart="13dp"
                android:paddingTop="5dp"
                android:textColor="@color/custom14"
                android:textSize="15sp"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/btnSearch"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                app:icon="@drawable/icon_search"
                app:iconGravity="textStart"
                app:iconSize="30dp"
                app:iconTint="@color/black"
                tools:ignore="SpeakableTextPresentCheck" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="61dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/white_search_backdrop"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Suggestions"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="11dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/poppins_regular"
                android:gravity="start|center_vertical"
                android:letterSpacing="0.03"
                android:paddingLeft="25dp"
                android:text="Table Mountain"
                android:textAllCaps="false"
                android:textColor="@color/custom15"
                android:textSize="16sp"
                tools:ignore="TouchTargetSizeCheck" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="6dp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/poppins_regular"
                android:gravity="start|center_vertical"
                android:letterSpacing="0.03"
                android:paddingLeft="25dp"
                android:text="Robben Island"
                android:textAllCaps="false"
                android:textColor="@color/custom15"
                android:textSize="16sp"
                tools:ignore="TouchTargetSizeCheck" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="6dp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/poppins_regular"
                android:gravity="start|center_vertical"
                android:letterSpacing="0.03"
                android:paddingLeft="25dp"
                android:text="@string/waterfront"
                android:textAllCaps="false"
                android:textColor="@color/custom15"
                android:textSize="16sp"
                tools:ignore="HardcodedText,TouchTargetSizeCheck" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="6dp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/poppins_regular"
                android:gravity="start|center_vertical"
                android:letterSpacing="0.03"
                android:paddingLeft="25dp"
                android:text="Lion's Head"
                android:textAllCaps="false"
                android:textColor="@color/custom15"
                android:textSize="16sp"
                tools:ignore="TouchTargetSizeCheck" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="6dp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/poppins_regular"
                android:gravity="start|center_vertical"
                android:letterSpacing="0.03"
                android:paddingLeft="25dp"
                android:text="Signal Hill"
                android:textAllCaps="false"
                android:textColor="@color/custom15"
                android:textSize="16sp"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>