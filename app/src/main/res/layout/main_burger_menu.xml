<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_gravity="start"
    android:background="@color/custom4">

    <Button
        android:id="@+id/btnBurger"
        android:layout_width="99dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@android:color/transparent"
        android:onClick="ClickMenu"
        app:icon="@drawable/icon_burger_menu"
        app:iconTint="@color/white"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/txtPageName"
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:drawableStart="@drawable/icon_pin"
        android:fontFamily="@font/poppins_regular"
        android:gravity="bottom|center_vertical"
        android:text="LocationName"
        android:textColor="@color/white"
        android:textSize="19sp" />

    <Button
        android:id="@+id/btnMainSearch"
        android:layout_width="34dp"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical|end"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        app:icon="@drawable/icon_main_search"
        app:iconSize="35dp"
        tools:ignore="SpeakableTextPresentCheck" />

</LinearLayout>